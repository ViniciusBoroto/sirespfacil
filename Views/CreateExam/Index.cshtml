@{
    ViewData["Title"] = "Exames de Saúde";
    List<string> exames = new List<string> { "Exame de sangue", "Raio-X", "Eletrocardiograma" };
}

<div class="form-container fade-in">
    <div class="form-header">
        <h1>Cadastro de Exames</h1>
        <p>Preencha os dados abaixo para cadastrar um novo exame</p>
    </div>

    <div class="form-content">
        
        <div class="section-card">
            @using (Html.BeginForm("CadastrarExame", "Home", FormMethod.Post))
            {
                <h2 class="section-title">
                    <i class="fas fa-clipboard-plus"></i> Dados do Exame
                </h2>

                <div class="form-grid">
                    <div class="form-group">
                        <label for="Nome" class="form-label required">Nome do Exame</label>
                        <input type="text" name="Nome" class="form-control" placeholder="Digite o nome do exame" required />
                    </div>

                    <div class="form-group">
                        <label for="Tipo" class="form-label required">Tipo</label>
                        <select name="Tipo" class="form-select">
                            <option>Laboratorial</option>
                            <option>Imagem</option>
                            <option>Clínico</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Data" class="form-label required">Data de Realização</label>
                        <input type="date" name="Data" class="form-control" required />
                    </div>

                    <div class="form-group full-width-field">
                        <label for="Observacoes" class="form-label">Observações</label>
                        <textarea name="Observacoes" class="form-control" rows="3" placeholder="Digite observações..."></textarea>
                    </div>
                </div>
            
                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cadastrar
                    </button>
                </div>
            }
        </div>

        <div class="section-card">
            <h2 class="section-title">Exames já cadastrados</h2>
            
            <ul class="list-group list-group-flush mt-3">
                @foreach (var exame in exames)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@exame</span>
                        <span class="badge bg-success rounded-pill">✔ Concluído</span>
                    </li>
                }
            </ul>
        </div>

    </div>
</div>

<link rel="stylesheet" href="~/css/formulario.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />