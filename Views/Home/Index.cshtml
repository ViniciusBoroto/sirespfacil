@{
    ViewData["Title"] = "Início - SIRESP";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Bem-vindo ao SirespFacil</h1>
        <p class="lead text-secondary">Sistema de Registro e Gestão de Exames de Saúde</p>
    </div>

    <div class="row g-4">
        <!-- Card de Cadastro -->
        <div class="col-md-4">
            <div class="card shadow-card border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-file-earmark-medical text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3 fw-bold">Cadastrar Exame</h5>
                    <p class="text-muted">Registre novos exames de pacientes de forma rápida e organizada.</p>
                    <a href="@Url.Action("CadastrarExame", "Home")" class="btn btn-primary mt-2 px-4 rounded-3">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Card de Lista -->
        <div class="col-md-4">
            <div class="card shadow-card border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-list-check text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3 fw-bold">Exames Cadastrados</h5>
                    <p class="text-muted">Visualize os exames já cadastrados e acompanhe seu histórico.</p>
                    <a href="@Url.Action("ListaExames", "Home")" class="btn btn-primary mt-2 px-4 rounded-3">Consultar</a>
                </div>
            </div>
        </div>

        <!-- Card de Relatórios -->
        <div class="col-md-4">
            <div class="card shadow-card border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-bar-chart-line text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3 fw-bold">Relatórios</h5>
                    <p class="text-muted">Gere relatórios detalhados e obtenha insights sobre os exames.</p>
                    <a href="@Url.Action("Relatorios", "Home")" class="btn btn-primary mt-2 px-4 rounded-3">Visualizar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --sir-blue: #003366;
        --sir-blue-dark: #002244;
        --sir-gray-dark: #333333;
        --sir-gray-light: #F2F2F2;
    }

    body {
        background-color: var(--sir-gray-light);
    }

    h1 {
        color: var(--sir-blue);
    }

    .card {
        background: #ffffff;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-primary {
        background-color: var(--sir-blue);
        border-color: var(--sir-blue-dark);
    }

        .btn-primary:hover {
            background-color: var(--sir-blue-dark);
        }

    .text-primary {
        color: var(--sir-blue) !important;
    }
</style>

